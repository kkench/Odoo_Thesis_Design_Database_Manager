<odoo>
    <data>
        <record id="view_users_tree_faculty_adviser" model="ir.ui.view">
            <field name="name">res.users.tree.faculty.adviser</field>
            <field name="model">res.users</field>
            <field name="arch" type="xml">
                <tree string="Faculty Advisers" editable="bottom">
                    <field name="name"/>
                    <field name="login"/>
                    <field name="is_faculty"/>
                </tree>
            </field>
        </record>

        <record id="action_users_in_faculty_adviser" model="ir.actions.act_window">
            <field name="name">Faculty Advisers</field>
            <field name="res_model">res.users</field>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="view_users_tree_faculty_adviser"/>
            <field name="domain">[('is_faculty', '=', True)]</field>
        </record>
    </data>
</odoo>
